<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@color/colorPrimaryDark"
    android:gravity="center_vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/clientEt"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_above="@+id/saveBtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:background="@drawable/bg_white_bordered_black"
        android:hint="Cliente"
        android:inputType="text"
        android:lines="1" />

    <EditText
        android:id="@+id/projectEt"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/clientEt"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_white_bordered_black"
        android:hint="Proyecto"
        android:inputType="text"
        android:lines="1" />

    <EditText
        android:id="@+id/directionEt"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/clientEt"
        android:layout_below="@+id/saveBtn"
        android:background="@drawable/bg_white_bordered_black"
        android:hint="DirecciÃ³n"
        android:inputType="text"
        android:lines="1" />

    <ImageButton
        android:id="@+id/saveBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_save_black_36dp"
        android:theme="@style/AccentButton" />


</RelativeLayout>